<style>
  #intro{
    color: black;
    margin-bottom: 27px;
    text-align: center;
    font-size: 33px;
    font-weight: 450;
  }
  .checkout-form{
    border: 2px  rgb(193, 191, 191);
    border-style: ridge;
    border-radius: 7px;
    padding: 27px;
  }
  #submit-btn{
    background-color: #d85d5d;
    color:white;
  }
  .add{
    margin-top: 30px;
  }
  .reverse{
    display: inline-block;
  }
  .return{
    color: rgb(0, 0, 0);
  }
</style>
<%- include ../partials/header %> <%- include ../partials/categories-navbar %>
<div class="container">
  <!-- Flash messages -->
  <div class="row mb-3">
    <div class="col-md-8 m-auto">
      <% if (errorMsg) { %>
      <div id="error" class="alert alert-danger">
        <%= errorMsg %>
      </div>
      <% } else { %>
      <div id="error" class="alert alert-danger d-none"></div>
      <% } %>
    </div>
  </div>
  <div class="col-md-8 m-auto">
    <div id="intro">
      <h> Checkout your order</h>
    </div>
    <!-- Checkout form -->
    <form action="/checkout" method="POST" id="checkout-form" class="checkout-form">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="card-name">Card Holder Name</label>
            <input type="text" id="card-name" class="form-control" placeholder="Card name" required />
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <label for="address">Address</label>
            <select id="address" class="form-control" name="address" >
              <option value="pa">Palestine</option>
              <option value="jo">Jordan</option>
              <option value="au">Australia</option>
              <option value="af">Afghanistan</option>
              <option value="am">Armenia</option>
              <option value="ba">Bahrain</option>
              <option value="ch">China</option>
              <option value="de">Denmark</option>
              <option value="eg">Egypt</option>
              <option value="ca">Canada</option>
              <option value="usa">USA</option>
              <option value="fr">France</option>
              <option value="ge">Germany</option>
              <option value="ira">Iraq</option>
              <option value="in">India</option>
              <option value="ire">Ireland</option>
              <option value="it">Italy</option>
              <option value="ind">Indonesia</option>
              <option value="ja">Japan</option>
              <option value="kw">Kuwait</option>
              <option value="le">Lebanon</option>
              <option value="li">Libya</option>
              <option value="me">Mexico</option>
              <option value="ni">Nigeria</option>
              <option value="om">Oman</option>
              <option value="qa">Qatar</option>
              <option value="sy">Syria</option>
              <option value="tu">Turkey</option>
              <option value="ye">Yemen</option>
              <option value="ru">Russia</option>
              <option vlaue="ar">Armenia</option>
              <option vlaue="kn">	Korea (North)</option>
              <option vlaue="sa">South Africa</option>
              <option vlaue="li">Libya</option>
              <option vlaue="su">Sudan</option>
              <option vlaue="ru">Russia</option>
              <option vlaue="sp">Spain</option>
              <option vlaue="sw">Sweden</option>
              <option vlaue="de">Denmark</option>
              <option value="ma">Malta</option>
            </select>
          </div>
        </div>
        <div class="col-md-12">
          <label for="card-element">Card Information</label>
          <!-- A Stripe Element will be inserted here. -->
          <div id="card-element" class="StripeElement"></div>
          <!-- Used to display form errors. -->
          <div id="card-errors" role="alert" class="text-danger mb-3"></div>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      </div>
      <button id="submit-btn" type="submit" class="btn btn-dark button-style">
        Buy now
      </button>
      <div class="add">
        <p class="reverse">Want to add other products before confirming?  </p>
        <a href="/products" class="return">  Go to add!</a>
      </div>
    </form>
  </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>

<div><%- include ../partials/footer %></div>