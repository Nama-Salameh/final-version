
<style>
  .mynav {
      width: 100%;
      height: 50px;
      background-color: #de5b6d;
      color: white;
      font-size: 30px;
      text-align: center;
  }
    #or{
            background: white;
            width:30px;
            margin: -30px auto 10px;
        }
        .button-log-in{
          height: 50px;
          background-color: black;
          color: white;
          border-radius: 6px;
        }
        .button-log-in:hover {
          background-color: rgba(27, 23, 23, 0.76);
          color: white;
          border-radius: 6px;
        }
        .google-icon{
          height: 30px ;
          width: 30px;
          margin-left: 100px;
          margin-right: 20px;
        }
        .button-google{
          height: 50px;
          background-color:white;
          color: black;
          padding-top: 6px;
          border-style: groove;
          border-color:rgba(236, 233, 233, 0.692) ;
          font-size: large;
          text-align: left;
          border-radius: 6px;
        }
        .container-form{
          border-style: groove;
          border-radius: 5px;
          border-color: rgba(0, 0, 0, 0.082);
          width: 35%;
          padding: 10px 10px;
        }
        .img-forgot-password{
          height: 15px;
          width: 17px;
        }
        @media (width:320px){
          .google-icon{
            height: 20px ;
            width: 20px;
          margin: 0;
          padding: 0;
          }
          .button-google{
            font-size: small;
            width: 80px;
          }
          .button-log-in{
            width: 80px;
          }
          .new-account-and-forget-password{
            font-size: 15px;
          }
        } 
        @media (min-width:375px){ 
          .google-icon{
            height: 20px ;
            width: 20px;
            margin: 0;}
          .button-google{
            font-size: 13px;
            border-color: #fff;
            padding: 2px;
            padding-left: 7px;
            }
          
        }
        @media (width:768px){
          .google-icon{
            height: 28px ;
            width: 28px;
            margin: 0;
            padding-right: 4px;
          }
          .button-google{
            font-size: 17px;
            width: 220px;
            padding-top: 7px;
            padding-left: 7px;
          }
          .button-log-in{
            width: 220px;
          }
        }
        @media (min-width:1024px){
          .button-google{
            font-size: 20px;
            width: 100%;
            padding-top: 7px;
            padding-left: 10px;
          }
          .google-icon{
            height: 30px ;
            width: 30px;
            margin: 0;
            padding-right: 5px;
          }
        }
        </style>
      </head>
    
    </style>
    
    
    <%- include ../partials/header %>
    <div class="mynav">From your place, for all the stores</div>
    
    <div class="container">
      <div class="row">
        <div class="col-md-8 m-auto">
          <h1 class="mt-4 mb-4">Sign In Page</h1>
          <!-- Flash message -->
          <% if(errorMsg !=null && errorMsg.length>0) {%>
          <div id="flash-msg" class="alert alert-danger">
            <%=errorMsg %>
          </div>
          <%}%>
          <form action="/user/signin" method="POST">
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" name="email" id="email" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="password"
              />
            </div>
            <!-- added a new button for redirecting to forgot password page  -->
    <p class="new-account-and-forget-password" >
      <a class="card-link" style="margin-left: 45%;" href="/user/forgot-password"><img src="https://cdn-icons-png.flaticon.com/512/3064/3064197.png" class="img-forgot-password"> Forgot password? </a>
      </p>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button type="submit" class="btn btn-primary button-style">
              Sign In
            </button>
          </form>
          <p class="mt-3">
            Don't have an account? <a href="/user/signup"> Sign Up!</a>
          </p>
          <p class="mt-3">
            Your an Admin ? <a href="/admin"> Sign in!</a>
          </p>
        </div>
      </div>
    </div>
    <hr> <p id="or"> Or </p> 
    <a class="button-google" href="google" style="margin-left: 42%; width: 400px; "><img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/archive/5/53/20210618182605%21Google_%22G%22_Logo.svg">Continue With Google</a>
    </div>
    
    
    </form>
    </div> 
     <%- include ../partials/footer %>
    </div>
  
  
  